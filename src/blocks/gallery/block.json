{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"textdomain": "comet",
	"name": "comet/gallery",
	"title": "Gallery",
	"icon": "images-alt2",
	"description": "Showcase a collection of images in a grid layout",
	"category": "media",
	"acf": {
		"mode": "edit",
		"renderTemplate": "render.php",
		"blockVersion": 3,
		"hideFieldsInSidebar": true
	},
	"editorStyle": [
		"comet-container",
		"comet-gallery",
		"comet-content-image-basic"
	],
	"keywords": [
		"layout",
		"images",
		"photos",
		"media",
		"gallery"
	],
	"attributes": {
		"size": {
			"type": "string",
			"default": "contained"
		},
		"lightbox": {
			"type": "boolean",
			"default": false
		},
		"captions": {
			"type": "boolean",
			"default": true
		},
		"maxPerRow": {
			"type": "number",
			"default": 3
		},
		"aspectRatio": {
			"type": "string",
			"default": "square"
		},
		"tagName": {
			"type": "string",
			"default": "section"
		}
	},
	"supports": {
		"mode": true,
		"jsx": true,
		"innerBlocks": false,
		"anchor": true,
		"backgroundColor": true,
		"size": true,
		"align": false
	}
}

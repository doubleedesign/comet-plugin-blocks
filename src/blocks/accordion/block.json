{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"textdomain": "comet",
	"name": "comet/accordion",
	"title": "Accordion",
	"icon": "arrow-down-alt2",
	"description": "Create expandable/collapsible sections to organise a content grouping such as FAQs",
	"category": "design",
	"acf": {
		"mode": "edit",
		"renderTemplate": "render.php",
		"blockVersion": 3,
		"hideFieldsInSidebar": true
	},
	"editorStyle": [
		"comet-accordion"
	],
	"editorScript": [
		"comet-accordion-js"
	],
	"keywords": [
		"content",
		"layout",
		"panels",
		"details",
		"expandable",
		"collapsible",
		"accordion"
	],
	"attributes": {
		"size": {
			"type": "string",
			"default": "contained"
		},
		"colorTheme": {
			"type": "string",
			"default": "primary"
		}
	},
	"supports": {
		"mode": true,
		"jsx": true,
		"innerBlocks": false,
		"anchor": true,
		"colorTheme": true,
		"backgroundColor": true,
		"size": true,
		"align": false
	}
}
